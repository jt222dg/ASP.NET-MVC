@{
    ViewBag.Title = "LNU Karta";
}

    <div class="header">
        
        <h1 class="logo">Linnéuniversitetet</h1>

	</div>

	<div class="clearfix">

		<div class="sidebar">
               
            <h2>Sök efter byggnader och lokaler</h2>

			<form class="search-form">

				<input type="text" name="q" id="q" autocomplete="off">

				<input type="submit" value="Sök">

			</form>

            <div class="shortcuts">

                Visa ort:
                <a href="#" data-id="1">Kalmar</a>
				<a href="#" data-id="3">Växjö</a>

			</div>

			<div class="sidebar-tabs">

				<ul class="sidebar-nav">
					<li><a href="#filters" class="filter-link active">Filter</a></li>
					<li><a href="#directions" class="directions-link">Vägbeskrivning</a></li>
				</ul>

				<div class="tab-filters" id="filters">

					<h3>Filtrera</h3>

					<ul class="filter-list">

					</ul>

				</div>

				<div class="tab-directions" id="directions">

					<h3>Vägbeskrivning</h3>

					<form class="directions-form">

						<label for="start">Från adress</label>
						<p class="top">
							<input type="text" name="start" id="start" class="directions-start">
						</p>

						<label for="end">Till</label>
						<p class="top">
							<input type="text" name="end" id="end" class="directions-end">
						</p>

						<input type="hidden" name="end-coordinates" id="end-coordinates">

						<input type="submit" value="Sök">

					</form>

					<div class="directions-panel"></div>

				</div>

			</div>

		</div>

		<div class="main">

			<div class="map-canvas"></div>

		</div>

	</div>
