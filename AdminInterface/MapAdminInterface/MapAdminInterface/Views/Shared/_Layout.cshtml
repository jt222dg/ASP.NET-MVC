<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/pics/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div id="container">
        <header>
            <div id="head_top">
                <a id="lnu_logo" href="http://lnu.se"></a>
            </div>
            <div id="head_bottom">
                <a class="application_logo" href="~/"></a>
                <a class="application_helper" href="~/Om">?</a>
            </div>
            @if(@ViewData["message"] != null)
            {
                <h4 id="message">@ViewData["message"]</h4>
            }
        </header>
        <section id="left_column">
                <nav>
                    <h2>Administrera</h2>
                    <ul>
                        <li>@Html.MenuActionLink("Områden", "Index", "Area")</li>
                        <li>@Html.MenuActionLink("Platser", "Index", "Location")</li>
                        <li>@Html.MenuActionLink("Platstyper", "Index", "Locationtype")</li>
                    </ul>
                </nav>
            </section>
        <section id="right_column">
            <article>
                @RenderBody()
            </article>
        </section>
        <footer class="main">
          <span class="address">
            Linnéuniversitetet<br/>
            391 82 Kalmar<br/>
            351 95 Växjö
          </span>
          <span class="telephone">
            <span class="label">Växel</span>
            <a rel=nofollow class="phone" href="tel:0772288000">0772-28 80 00</a><br/>
            <span class="label">Växel internt</span>
            <a rel=nofollow class="phone" href="tel:0480446700">5555 Kalmar, 8888 Växjö</a><br/>
            <span class="label">IT-support</span>
            <a class="phone" rel=nofollow href="tel:0480446700">0480-44 67 00</a>
          </span>
          <span class="other">
            <span class="email">
              <span class="label">E-post</span>
              <a href="mailto:info@lnu.se">info@lnu.se</a>
            </span>
            <span class="web">
              <span class="label">Webbplats</span>
              <a href="http://lnu.se" rel="nofollow">Lnu.se</a>
            </span>
            <span class="corporate_id">
              <span class="label">Org.nr.</span>
              202100-6271
            </span>
            <span class="crisis_information">
              <span class="label">
                <a href="http://intranet.lnu.se/att-arbeta-vid-lnu/kris" rel="nofollow">Krisinformation</a>
              </span>
            </span>
          </span>
          <div id="copyright">&copy; Linnéuniversitetet 2012</div>
          <div id="pen"></div>
        </footer>
        <script src="@Url.Content("~/Scripts/application.js")" type="text/javascript"></script>
    </div>
</body>
</html>